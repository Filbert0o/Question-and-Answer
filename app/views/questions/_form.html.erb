<%= form_for @question do |f| %>
  <div class="form-action">
    <fieldset>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </fieldset>

    <fieldset>
      <%= f.label :description %>
      <%= f.text_field :description %>
    </fieldset>

    <fieldset>
      <%= f.label :user_id %>
      <%= f.number_field :user_id %>
    </fieldset>
  </div>

  <div class="form-action">
    <%= f.submit "Submit"%>
  </div>


<% end %>
